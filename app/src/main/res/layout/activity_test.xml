<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#06324A"
    tools:context=".MainActivity">

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:queryHint="Search Here"
        android:iconifiedByDefault="false"
        android:layout_alignParentTop="true"
        />

    <ImageView
            android:layout_width="555sp"
            android:layout_height="272sp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_weight="0"
            android:alpha="0.2"
            android:id="@+id/asas"
            android:src="@drawable/ui_component_flash_screen_sq_lite">

        </ImageView>

    <ImageView
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:layout_gravity="center"
        android:layout_marginTop="-280dp"
        android:layout_weight="0"
        android:id="@+id/as"
        android:src="@mipmap/ic_launcher_pingu_logo_foreground">
    </ImageView>
    <ProgressBar
        android:id="@+id/progressBarFlashScreen"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-55dp"
        android:indeterminate="true"
        android:max="100"
        android:minHeight="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FE4E0C"
        android:textSize="35sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_marginTop="-250dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name">
    </TextView>

</LinearLayout>