<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#06324A"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/ui_flash_alpa_screen"
        android:id="@+id/asas">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top"
            android:layout_gravity="center"
            android:id="@+id/asaas">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FE4E0C"
                android:textSize="40sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/app_name">
            </TextView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_weight="0"
                android:id="@+id/as"
                android:src="@mipmap/ic_launcher_app_icon_new_foreground">
            </ImageView>
            <ProgressBar
                android:id="@+id/progressBarFlashScreen"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-50dp"
                android:indeterminate="true"
                android:max="100"
                android:minHeight="30dp" />

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:alpha="0.15"
                android:background="@drawable/ui_component_flash_screen_sq_lite"
                android:id="@+id/asas">
            </LinearLayout>

            <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:alpha="0.15"
            android:id="@+id/asasdd"
            android:src="@drawable/ui_component_flash_screen_sq_lite">
        </ImageView>-->

        </LinearLayout>
    </LinearLayout>



</LinearLayout>